{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name":"client",
      "image":"stantronic/multi-docker-client",
      "hostname": "client",
      "essential":false,
      "memory": 128
    },
    {
      "name":"server",
      "image":"stantronic/multi-docker-server",
      "hostname": "api",
      "essential":false,
      "memory": 128
    },
    {
      "name":"worker",
      "image":"stantronic/multi-docker-worker",
      "hostname":"worker",
      "essential":false,
      "memory": 128
    },
    {
      "name":"nginx",
      "image":"stantronic/multi-docker-nginx",
      "essential":true,
      "portMappings":[
        {
          "hostPort":80,
          "containerPort":80
        }
      ],
      "links":[
        "client",
        "server"
      ],
      "memory": 128
    }
  ]
}
